@model IEnumerable<PDVWebCore.Areas.Admin.Models.Customers.CustomerRole>
@*@model PDVWebCore.Commons.Models.Pager<PDVWebCore.Areas.Admin.Models.Customers.CustomerRole>*@
@{
    ViewBag.Title = "Customer roles";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header content-header">
                    Customer roles
                    <a href="@Url.Action("Create", "CustomerRole")" class="btn btn-primary pull-right"><i class="fa fa-plus-square fa-fw"></i>Create New</a>
                </h1>
            </div>
        </div>
        <!-- /.container-fluid -->
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RoleCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CustomerRoleID })
                    </td>
                </tr>
            }
        </table>
        @Html.Partial("_PagingPartial")
    </div>
}